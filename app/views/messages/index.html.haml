= render 'main_header'

.container
  .row.mt-3.d-flex.justify-content-between
    -@messages.each do |message|
      -if message.images.attached?
        - message.images.each do |image|  
          .card.col-lg-3
            = image_tag image,class:'mt-3 img-fluid'
            .card-body
              %h5
              = message.title
              %p.card-text 
              = message.text
              

= render 'main_footer'


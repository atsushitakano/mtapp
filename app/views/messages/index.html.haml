= render 'main_header'
.message-body.container
  .row.mt-3.d-flex.justify-content-between
    -@messages.each do |message|
      .card.col-lg-3
        .preview
          -if message.images.attached?
            - message.images.each do |image|  
              = image_tag image,width:"200", height:"300",class:'mt-3 img-fluid'
        = message.title
        %br/ 
        = message.text
  = paginate @messages
= render 'main_footer'

